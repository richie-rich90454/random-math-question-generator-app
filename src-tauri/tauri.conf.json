{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "RandMatQuGeA",
    "version": "3.0.0",
    "identifier": "com.richierich.mathgen",
    "build": {
        "frontendDist": "../dist",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "",
        "devUrl": "http://localhost:1331"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "RandMatQuGeA",
                "width": 1000,
                "height": 800,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis",
            "dmg",
            "appimage",
            "deb"
        ],
        "icon": [
            "icons/icon.png",
            "icons/icon.ico",
            "icons/icon.icns"
        ]
    }
}